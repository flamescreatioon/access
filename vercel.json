{
    "version": 2,
    "installCommand": "npm install && cd backend && npm install",
    "builds": [
        {
            "src": "backend/api/index.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "backend/**"
                ]
            }
        },
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/backend/api/index.js"
        },
        {
            "src": "/(.*)",
            "dest": "/$1"
        }
    ]
}